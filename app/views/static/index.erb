<div class="url_list">
	<table>
		<tbody>
			<% Url.last(20).reverse.each do |url| %>
				<tr>
					<td> 
						<a href="<%= url.original_url%>" id="title">
						<%=url.title%>
						</a><br>
						<a href="<%= url.original_url%>" id="long_url">
						<%= url.original_url%>
						</a><br>
						<div id="short_url"><span id ="<%=url.short_url%>"><%=request.host_with_port+"/"+url.short_url%></span>
						<button type="button" id="copy" onclick="copyToClipboard('<%=url.short_url%>')">COPY</button></div>
						<div id="clickcount"><%= url.click_count%><img src="/img/bar-chart.png" id="barchart"></div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

